services:
  eatco-api:
    build: .
    container_name: eatco-api
    ports:
      - '3000:3000'
    depends_on:
      # eatco-db가 healthy 상태가 될 때까지 기다리도록 수정
      eatco-db:
        condition: service_healthy
    environment:
      DATABASE_URL: 'postgresql://user:1234@eatco-db:5432/eatco_db'

  eatco-db:
    image: postgres:15-alpine
    container_name: eatco-db
    restart: always
    # --- healthcheck 설정 추가 ---
    healthcheck:
      test: ['CMD-SHELL', 'pg_isready -U user -d eatco_db']
      interval: 10s
      timeout: 5s
      retries: 5
    # ---------------------------
    environment:
      POSTGRES_USER: user
      POSTGRES_PASSWORD: 1234
      POSTGRES_DB: eatco_db
    ports:
      - '5432:5432'
    volumes:
      - postgres-data:/var/lib/postgresql/data

volumes:
  postgres-data:
